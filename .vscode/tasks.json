{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build and Run C++",
            "type": "shell",
            "command": "g++ -g \"${fileDirname}\\${fileBasename}\" -o \"${fileDirname}\\${fileBasenameNoExtension}\"  && \"${fileDirname}\\${fileBasenameNoExtension}\"",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$gcc"
        },
        {
            "label": "Build and Run C++ (Multiple cpp files)",
            "type": "shell",
            "command": "g++ -g \"${fileDirname}\"\\*.cpp -o \"${fileDirname}\\${fileBasenameNoExtension}\"  && \"${fileDirname}\\${fileBasenameNoExtension}\"",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$gcc"
        },
        {
            "label": "Build C++",
            "type": "shell",
            "command": "g++ -g \"${fileDirname}\\${fileBasename}\" -o \"${fileDirname}\\${fileBasenameNoExtension}\"",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$gcc"
        },
        {
            "label": "Build C++ (Multiple cpp files)",
            "type": "shell",
            "command": "g++ -g \"${fileDirname}\\*.cpp\" -o \"${fileDirname}\\${fileBasenameNoExtension}\"",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$gcc"
        }
    ]
}